{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Natural Disasters per 10,000 square kilometre by State",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/amishmishra27/FIT3179_W9_HW_2/refs/heads/main/js/aus_boundaries.topojson",
    "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
  },
  "projection": {"type": "mercator"},
  "layer":[
    {
      "data": {
        "url": "https://raw.githubusercontent.com/amishmishra27/FIT3179_W9_HW_2/refs/heads/main/js/aus_boundaries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_10"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "transform": [
        {
          "lookup": "properties.STE_NAME21",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/amishmishra27/FIT3179_W9_HW_2/refs/heads/main/data/state_disaster_tally.csv"
            },
            "key": "State",
            "fields": ["Disasters","Area"]
          }
        },
        {"calculate": "datum.Disasters/datum.Area * 10000", "as": "Natural Disasters per 10,000 square kilometres"}
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Natural Disasters per 10,000 square kilometres",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1.5, 5, 10],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          }
        },
        "tooltip": [
          {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
          {"field": "Natural Disasters per 10,000 square kilometres", "type": "quantitative", "format": ".2f"}
        ]
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.STE_NAME21",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/amishmishra27/FIT3179_W9_HW_2/refs/heads/main/data/countryInfo.csv"
            },
            "key": "name",
            "fields": ["latitude", "longitude"]
          }
        }
      ],
      "mark": {"type": "text"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "properties.STE_NAME21", "type": "nominal"},
        "opacity": {
          "condition": {
            "test": "datum['properties.STE_NAME21'] == 'Victoria' || datum['properties.STE_NAME21'] == 'Northern Territory' || datum['properties.STE_NAME21'] == 'South Australia' || datum['properties.STE_NAME21'] == 'Western Australia' ||  datum['properties.STE_NAME21'] == 'Queensland' ||  datum['properties.STE_NAME21'] == 'New South Wales' ||  datum['properties.STE_NAME21'] == 'Tasmania'",
            "value": 1
          },
          "value": 0
        }
      } 
    }
  ] 
}